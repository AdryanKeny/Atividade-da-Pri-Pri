###Questão 4

a int(input("Em que ano você nasceu?"))
i = 2023-a
 print("Você tem",2023-a,"anos")

if (i > 0 and i <= 11):

print("Você é uma criança")
 elif (i > 11 and i <= 18):
print("Você é um adolescente")

 elif (i > 18 and i <= 24):

print("Você é um jovem")
 elif (i > 24 and i <= 40):
print("Você é adulto")

 elif (i > 40 and i <= 60):
print("Você está na meia idade")

 elif i > 60:
print("Você é um idoso")

 else:
print("ERRO! (Digite um número comum.)")

