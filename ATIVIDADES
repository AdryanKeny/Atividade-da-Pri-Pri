###Questão 6

a = int(input("Digite um número entre 1 e 7:"))

if a == 1:
print("Hoje é domingo")

elif a == 2:
print("Hoje é segunda-feira")

elif a == 3:
print("Hoje é terça-feira")

elif a == 4:
print("Hoje é quarta-feira")

elif a == 5:
print("Hoje é quinta-feira")

elif a == 6:
print("Hoje é sexta-feira")

elif a == 7:
print("Hoje é sábado")


else:
print(" ERRO!! DIGITE UM NÚMERO ENTRE 1 E 7")

###Questão 7

a = int(input("Digite um número: "))
b = int(input("Digite outro número: "))
F = input("Qual operação você deseja realizar?" )

if F== "+":

print(a + b)

elif F
print(a - b)


elif F=="*":
print(a * b)


elif F == "/":
print(a /b)


else:
print("ERRO! não fuja das normas padrões")

###Questão 8

pi = 3.1415926
raio = float(input("Digite o raio do círculo: "))
area = pi * (raio ** 2)
print(f"A área de um círculo de raio {raio} é {area:.2f}m².")

